<div class="common-form">
    <h6 class="title">Contact us</h6>
    <form method="post" action="@Url.FrontUrl().SubmissionUrl("PostLetter")">
        @Html.AntiForgeryToken()
        <!-- this contact form will send an email to the email address defined in system/settings/smtp-->
        @*<input type="file" name="image"/>*@
        @*<input type="hidden" name="SuccessedUrl" value='@Url.FrontUrl().PageUrl("Thankyou")'/>*@
        @*<input type="hidden" name="FailedUrl" value='@Url.FrontUrl().PageUrl("Failed")'/>*@
        <p class="field">
            <label for="title">@("Title:".Label())</label>
            <input type="text" id="title" name="title" data-val-required="Title is required" data-val="true"/>
            @Html.ValidationMessageForInput("Title")
        </p>        
        <p class="field">
            <label for="content">@("Content:".Label())</label>
            <textarea id="content" name="content" cols="20" rows="10"></textarea>
        </p>
        <div class="buttons">
            <button type="submit" name="submit">Submit</button>
        </div>
    </form>

</div>
